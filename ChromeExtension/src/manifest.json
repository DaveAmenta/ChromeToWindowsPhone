{
  "name": "Chrome To Windows Phone",
  "version": "1.0",
  "description": "Send links and text to your Windows Phone 7",
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
    "icons": { "16": "icon.png",
               "48": "icon.png",
              "128": "icon.png" },
  "content_scripts": [ {
      "js": [ "content_script.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
  } ],
  "update_url": "http://www.daveamenta.com/ext/chrome_to_wp7/update.xml",
  "permissions": [ "contextMenus", "tabs", "http://*/*", "https://*/*" ]
}